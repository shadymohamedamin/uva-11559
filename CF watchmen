    mp1[p[i].first]++;
    mp2[p[i].second]++;
    mp[p[i]]++;                          
}
long long int s=0;
for(int i=0;i<n;i++)
    s+=mp1[p[i].first]+mp2[p[i].second]-(mp[p[i]]-1)-2;
    
    
